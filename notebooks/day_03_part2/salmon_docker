FROM ubuntu:22.04

LABEL image.author.name="Leonie"
LABEL image.author.email="yourmail"

# Set the PATH environment variable (to /usr/bin)
ENV PATH="/usr/bin:${PATH}"

# Install dependencies
RUN apt-get update && \
    apt-get install -y curl tar libtbb2 && \
    apt-get clean 

# Download and install Salmon
RUN curl -L https://github.com/COMBINE-lab/salmon/releases/download/v1.5.2/salmon-1.5.2_linux_x86_64.tar.gz \
    -o /tmp/salmon.tar.gz && \
    tar -xzf /tmp/salmon.tar.gz -C /opt && \
    rm /tmp/salmon.tar.gz && \
    ln -s /opt/salmon-1.5.2_linux_x86_64/bin/salmon /usr/bin/salmon
    

